{
  "name": "ttg-fastify",
  "version": "0.0.1",
  "description": "REST API template for Fastify",
  "main": "server.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "pretest": "npm run lint",
    "test": "tap test/**/*.test.js",
    "start": "nodemon server.js | pino-colada",
    "lint": "eslint --fix ."
  },
  "engines": {
    "node": "^10.x"
  },
  "author": "TTG International",
  "dependencies": {
    "dotenv": "6.2.0",
    "fastify": "next",
    "fastify-autoload": "^0.6.0",
    "fastify-cors": "next",
    "fastify-helmet": "^3.0.0",
    "fastify-plugin": "^1.4.0"
  },
  "devDependencies": {
    "@ttgint/eslint-config": "^1.0.6",
    "eslint": "^5.12.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.9",
    "pino-colada": "^1.4.4",
    "prettier": "^1.15.3",
    "tap": "^12.1.1"
  },
  "eslintConfig": {
    "extends": "@ttgint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix .",
      "git add"
    ]
  }
}
